{
	"name": "thirft-formatter",
	"displayName": "Thirft Formatter",
	"description": "Thrift file formatter, keeping and align comment, patch the miss",
	"version": "1.0.2-a0",
	"engines": {
		"vscode": "^1.67.0"
	},
	"categories": [
		"Formatters"
	],
	"keywords": [
		"thrift",
		"formatter"
	],
	"activationEvents": [
		"onCommand:thirft-formatter.formatThriftFile"
	],
	"browser": "./dist/web/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "thirft-formatter.formatThriftFile",
				"title": "Format Thrift"
			}
		]
	},
	"repository": "https://github.com/thrift-labs/thrift-fmt-vscode",
	"publisher": "alingse",
	"scripts": {
		"test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
		"pretest": "npm run compile-web",
		"vscode:prepublish": "npm run package-web",
		"compile-web": "webpack",
		"watch-web": "webpack --watch",
		"package-web": "webpack --mode production --devtool hidden-source-map",
		"lint": "eslint src --ext ts",
		"run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
	},
	"devDependencies": {
		"@types/mocha": "^9.1.1",
		"@types/vscode": "^1.67.0",
		"@types/webpack-env": "^1.17.0",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"@vscode/test-web": "^0.0.24",
		"assert": "^2.0.0",
		"eslint": "^8.16.0",
		"mocha": "^10.0.0",
		"process": "^0.11.10",
		"ts-loader": "^9.3.0",
		"typescript": "^4.7.2",
		"webpack": "^5.72.1",
		"webpack-cli": "^4.9.2"
	},
	"dependencies": {
		"thrift-fmt-ts": "^1.0.3-a0"
	}
}
